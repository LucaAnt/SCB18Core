		</comps>
		<researchPrerequisites>
			<li>Autodoors</li>
		</researchPrerequisites>
	</ThingDef>


	<ThingDef ParentName="SCWallBase">
		<defName>WallLighted</defName>
		<label>lighted wall</label>
