		</graphicData>
		<constructEffect>ConstructWood</constructEffect>
		<costList>
			<WoodLog>50</WoodLog>
			<Steel>10</Steel>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
