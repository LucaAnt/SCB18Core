			<li>
				<filter>
					<thingDefs>
						<li>Jade</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Jade</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BlocksJade>20</BlocksJade>
		</products>
	</RecipeDef>
	
