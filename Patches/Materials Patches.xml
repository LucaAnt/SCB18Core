<Patch>

    <!--============================== Basic Resources ==============================-->
    <Operation Class="PatchOperationRemove">
        <xpath>*/ThingDef[defName="Steel"]/stuffProps/categories |
            */ThingDef[defName="Plasteel"]/stuffProps/categories |
            */ThingDef[defName="Gold"]/stuffProps/categories |
            */ThingDef[defName="Silver"]/stuffProps/categories |
            */ThingDef[defName="Uranium"]/stuffProps/categories |
            */ThingDef[defName="WoodLog"]/stuffProps/categories |
            */ThingDef[defName="Jade"]/stuffProps/categories
        </xpath>
    </Operation>
    
    <Operation Class="PatchOperationAdd">
        <xpath>*/ThingDef[@Name="ChunkRockBase"]</xpath>
        <value>
            <stuffProps>
                <categories>
                    <li>RawStoneChunk</li>
                </categories>
                <statOffsets>
                    <WorkToBuild>10</WorkToBuild>
                </statOffsets>
                <statFactors>
                    <Flammability>0</Flammability>
                    <WorkToBuild>6.0</WorkToBuild>
                    <WorkToMake>1.3</WorkToMake>
                    <DoorOpenSpeed>0.45</DoorOpenSpeed>
                    <BedRestEffectiveness>0.9</BedRestEffectiveness>
                    <MeleeWeapon_CooldownMultiplier>1.35</MeleeWeapon_CooldownMultiplier>
                </statFactors>
            </stuffProps>
        </value>
    </Operation>
